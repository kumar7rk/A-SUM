<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.geeky7.rohit.location" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.ThreeTabsActivity"
            android:launchMode="singleInstance" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MainActivity" />
        <activity android:name=".activity.FiveColorChangingTabsActivity" />
        <activity android:name=".activity.ThreeTabsQRActivity" />
        <activity android:name=".activity.BadgeActivity" />
        <activity
            android:name=".activity.CustomColorActivity"
            android:label="@string/title_activity_custom_color"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".service.BackgroundService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="ACTION_SERVICE" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </service>

        <activity
            android:name=".activity.Configure"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:parentActivityName=".activity.ThreeTabsActivity" >
        </activity>
        <activity
            android:name=".activity.SelectRule"
            android:excludeFromRecents="true"
            android:label="@string/title_activity_select_rule"
            android:launchMode="singleInstance"
            android:noHistory="true"
            android:parentActivityName=".activity.ThreeTabsActivity" >
        </activity>

        <service
            android:name=".service.Automatic"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".service.SemiAutomatic"
            android:enabled="true"
            android:exported="true" >
        </service>
        <service
            android:name=".service.Manual"
            android:enabled="true"
            android:exported="true" >
        </service>
    </application>

</manifest>
